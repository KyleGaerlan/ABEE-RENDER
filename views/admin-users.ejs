                console.error('Error deleting user:', error);
                showNotification(error.message || 'Failed to delete user. Please try again.', 'error');
                if (error.message.includes('session has expired')) {
                    setTimeout(() => {
                        window.location.href = '/admin';
                    }, 2000);
                }
            }
        }

