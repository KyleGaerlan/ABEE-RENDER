<script>
document.addEventListener("DOMContentLoaded", () => {
  // Tab switching
  const tabs = document.querySelectorAll(".chart-tab");
  const contents = document.querySelectorAll(".chart-tab-content");

  tabs.forEach(tab => {
    tab.addEventListener("click", () => {
      tabs.forEach(t => t.classList.remove("active"));
      contents.forEach(c => c.classList.remove("active"));
      tab.classList.add("active");
      document.querySelector(`.${tab.dataset.period}-selector`).classList.add("active");
    });
  });

  // Fill comparison year dropdowns
  const now = new Date().getFullYear();
  ["comparison-year-1", "comparison-year-2"].forEach(id => {
    const el = document.getElementById(id);
    for (let y = now; y >= 2020; y--) {
      const opt = document.createElement("option");
      opt.value = y;
      opt.textContent = y;
      el.appendChild(opt);
    }
  });
  document.getElementById("comparison-year-1").value = now - 1;
  document.getElementById("comparison-year-2").value = now;

  // ðŸ§© Fixed: load comparison by selected metric
  async function loadComparison(y1, y2, metric) {
    const res = await fetch(`/api/analytics/monthly-comparison?year1=${y1}&year2=${y2}`);
    const data = await res.json();
    if (!data.success) return alert("Failed to load comparison data");

    const { data1, data2 } = data;
    const ctx = document.getElementById("comparisonChart").getContext("2d");

    // ðŸ‘‡ Pick metric dynamically
    const metricLabel = {
      revenue: "Sales (â‚±)",
      bookings: "Bookings",
      users: "User Registrations"
    }[metric];

    const colorMap = {
      revenue: "#4BC0C0",
      bookings: "#FF6384",
      users: "#36A2EB"
    };

    if (window.comparisonChart && typeof window.comparisonChart.destroy === "function")
      window.comparisonChart.destroy();

    window.comparisonChart = new Chart(ctx, {
      type: "line",
      data: {
        labels: ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"],
        datasets: [
          {
            label: `${data1.year} ${metricLabel}`,
            data: data1[metric],
            borderColor: colorMap[metric],
            backgroundColor: "rgba(0,0,0,0)",
            tension: 0.3,
            borderWidth: 3,
            pointRadius: 4,
            pointHoverRadius: 6
          },
          {
            label: `${data2.year} ${metricLabel}`,
            data: data2[metric],
            borderColor: "rgba(255,159,64,1)",
            backgroundColor: "rgba(0,0,0,0)",
            tension: 0.3,
            borderWidth: 3,
            pointRadius: 4,
            pointHoverRadius: 6
          }
        ]
      },
      options: {
        responsive: true,
        plugins: {
          title: {
            display: true,
            text: `${metricLabel} Comparison: ${y1} vs ${y2}`,
            font: { size: 18, weight: "bold" }
          },
          legend: { position: "bottom" }
        },
        scales: {
          y: {
            beginAtZero: true,
            title: { display: true, text: metric === "revenue" ? "Revenue (â‚±)" : "Count" }
          }
        }
      }
    });
  }

  // ðŸ§  Compare button click
  document.getElementById("comparison-apply").addEventListener("click", () => {
    const y1 = document.getElementById("comparison-year-1").value;
    const y2 = document.getElementById("comparison-year-2").value;
    const metric = document.getElementById("comparison-metric").value;
    loadComparison(y1, y2, metric);
  });
});
</script>


